<div class="title">Alia's Animations</div><br><br>


<div class="ui two column centered grid">
  <div class="two wide column"></div>
  <div class="two wide column">
<div class="search">
<form class="ui small form" action="/searchvid" method="post">
  <div class="field">
    <input type="text" name="tag" placeholder="Search by Tag">
  </div>
  <button class="ui green button"type="submit" name="push">Search</button>
</form>
</div>
  </div>
  <div class="two wide column"></div>
</div>




<%if session[:visited]%>
    <div class="title"> <button class="ui blue button" id="addimage">Add Video</button></div><br>
    <div class="ui modal">
      <div class="header">Add Video</div>
      <div class="content">

        <form method="post" action="/uploadvid">
          Name: <div class="ui input"><input class="ui input" type="text" name="name" placeholer="Name"></div><br><br>
          Youtube link: <div class="ui input"><input class="ui input" type="text" name="embed" placeholer="Youtube URL"></div><br><br>
          Image Tag: <div class="ui input"><input class="ui input" type="text" name="tag" placeholer="Tag"></div><br><br>
          Caption: <div class="field"><textarea name="caption" placeholder="Type the caption here"></textarea></div><br><br>
          <button class="ui button" type="submit">Add to Gallery</button>
        </form>

      </div>
    </div>



<%end%>
<div class="ui centered stackable six column grid">

  <% @video.each do |video|%>
      <div class="column">
        <div class="ui link fluid  centered stackable card">
          <a class="image" href="/video/<%=video.id%>">
            <iframe class="video" width="295" height="157.5" src="https://www.youtube.com/embed/<%=video.embed%>?rel=0" frameborder="0"></iframe>
          </a>

          <div class="content">
            <a >
              <a href="/video/<%=video.id %>" class="header"><%=video.name%></a>
            </a>
                    <div class="meta">
                      <span class="date">Uploaded at some point</span>
                    </div>
            <div class="description">
              <%=video.caption%>
            </div>
          </div>

          <div class="extra content">
            <a>
              <%=video.tag%>
            </a>
          </div>
        </div>
      </div>

  <%end%>

</div>